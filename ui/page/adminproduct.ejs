<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
    <link rel="stylesheet" href="/css/datatables.min.css">
    <link rel="stylesheet" href="/css/datatable.css">
    <title>Products</title>
</head>

<body>
    <!-- Table for displaying products -->
    <div class="container-table">
        <div class="row-table">
            <div class="col-12">
                <div class="btn-dttabble">
                    <button id="addNewBtn"><i class="fa-solid fa-plus"></i>Tambah produk</button>
                    <button id="close"><i class="fa-solid fa-arrow-left"></i>keluar</button>
                </div>
                <table id="example" class="table table-bordered">
                    <thead>
                        <tr>
                            <th>NO</th>
                            <th>Nama Produk</th>
                            <th>Kabupaten/Kota</th>
                            <th>Kategori</th>
                            <th>Lokasi Penjual</th>
                            <th>Kontak Penjual</th>
                            <th>Kisaran Harga</th>
                            <th>Foto</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Data Rows will be injected here via JS -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Tambah Produk</h5>
                    <button type="button" class="cross" data-bs-dismiss="modal" aria-label="Close"><i
                            class="fa-solid fa-xmark"></i></button>
                </div>
                <div class="modal-body">
                    <form id="addNewProducts">
                        <!-- Form Fields -->
                        <div class="mb-3">
                            <label for="productCity">Kabupaten/Kota<span>*</span></label>
                            <input type="text" class="form-control" id="productCity" required autocomplete="off">
                        </div>
                        <div class="mb-3">
                            <label for="produkName">Nama Produk<span>*</span></label>
                            <input type="text" class="form-control" id="produkName" required autocomplete="off">
                        </div>
                        <!-- Kategori Produk -->
                        <div class="mb-3">
                            <label for="productCategories">Kategori Produk<span>*</span></label>
                            <select name="" class="form-select" id="produkCategories" required>
                                <option value="">Jenis Kategori</option>
                                <option value="Aksesoris">Aksesoris</option>
                                <option value="Makanan">Makanan</option>
                                <option value="Minuman">Minuman</option>
                                <option value="Fashion">Fashion</option>
                            </select>
                        </div>
                        <!-- Lokasi Penjual -->
                        <div class="mb-3">
                            <label for="productLocation">Lokasi Penjual<span>*</span></label>
                            <input type="text" class="form-control" id="productLocation" required autocomplete="off">
                        </div>
                        <!-- Kontak Penjual -->
                        <div class="mb-3">
                            <label for="costumerContact">Kontak Penjual<span>*</span></label>
                            <input type="text" class="form-control" id="costumerContact" required autocomplete="off">
                        </div>
                        <!-- Kisaran Harga -->
                        <div class="mb-3">
                            <label for="priceRange">Kisaran Harga<span>*</span></label>
                            <input type="text" class="form-control" id="produkKota" required autocomplete="off">
                        </div>
                        <!-- Input Foto -->
                        <div class="input-group mb-3">
                            <input type="file" class="form-control" id="productImg" name="foto" required>
                            <label class="input-group-text" for="productImg">Upload</label>
                        </div>
                        <button type="submit" class="submitBtn">Simpan</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <!-- DataTables jQuery -->
    <script src="/js/datatables.min.js"></script>

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JS -->
    <script src="/js/datatable.js"></script>
</body>

</html>
